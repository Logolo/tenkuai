<div class="homeRibbonWrap" id="rightRibbon">
	
	<div class="ribbonFront">
	  <span>Newest Shirs</span>
	</div> <!-- #rightRibbon .ribbonFront -->
	
	<div class="ribbonEdge ribbonEdgeLeft"></div>
	<div class="ribbonEdge ribbonEdgeRight"></div>
	
</div> <!-- rightRibbon -->

<div class="clear"></div>

<%unless @shirs.empty?%>
<% @shirs.each do |s| %>
<div class="homeShirLatest">
	<%unless s.photo_file_name.nil?%>
	<%= image_tag s.photo.url(:thumb) %>
	<%else%>
	<%= image_tag("test/latestImg1.jpg", :alt => "title of shir") %>
	<%end%>
	<div class="homeLatestDesc">
		<p class="small">For 20 kuai, <%= link_to s.user.username, username_path(s.user) %> will..</p>
		<h4><%= link_to s.title.capitalize[0,82], shirs_user_path(s.user.username, s) %></h4>
	</div> <!-- homeLatestDesc -->	
</div> <!-- homeShirLatest -->
<%end%>
<%end%>