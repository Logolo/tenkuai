
<%= @folder.name%>
<%if @messages%>
(<%= @messages.where(:status => 1).count%>/<%= @messages.count%>)<br />
<%@messages.each do |message|%>

<%#next if has_already_sent? message.author.username%>
<%=message.author.username%>
<%= link_to message.subject, message_path(message, :anchor => message.id)%>
<%= distance_of_time_in_words(message.created_at, Time.now)%> ago
<%=status_to_word message.status %>
<br />

<%end%>
<%end%>

<%= will_paginate @messages%>