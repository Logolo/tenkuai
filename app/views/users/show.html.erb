<p id="notice"><%= notice %></p>


<p>
	<b>Email:</b>
	<%= @user.email %>
</p>

<p>
	<b>Username:</b>
	<%= @user.username %>
</p>

<p>
	<b>Password:</b>
	<%= @user.password %>
</p>

<p>
	<b>Photo:</b>
	<%= @user.photo %>
</p>

<p>
	<b>User type:</b>
	<% @user.roles.each do |u| %>
	<%=u.name%>
	<%end%>
</p>
<%if user_signed_in?%>
<%if current_user.id == @user.id%>
<p><%=link_to 'Edit Account', edit_user_registration_path%></p>
<%end%>
<%end%>
<p>
	<b>Order:</b>
	<%= @user.order_id %>
</p>
<%=@shirs.count%> Shir<br />
<%if !@shirs.empty?%>
<%@shirs.each do |s|%>
<%=link_to s.title, user_shir_path(@user, s)%>
<%end%>
<%end%>

